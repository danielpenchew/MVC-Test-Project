@model AllBooksViewModel
@{
    ViewBag.Title = "AllBooks";
}

@foreach (var book in Model.AllBooks)
{
    <div class="panel">
        <div>
            @Html.ActionLink(
                book.Title,
                "Detail",
                "Book",
                routeValues: new { id = book.Id },
                htmlAttributes: null
)
        </div>
        <div>
            <h5>
                <i>by @book.Author.FirstName @book.Author.LastName</i>
            </h5>
            <button>
                @Html.ActionLink("Delete", "Delete", new { id = book.Id })
            </button>

            <button>
                @Html.ActionLink("Edit", "Edit", new { id = book.Id })
            </button>
        </div>
    </div>

}
<button>
    @Html.ActionLink("Add new book", "Create", "Book")
</button>

